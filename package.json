{
  "name": "hln-a",
  "version": "2.0.0",
  "description": "HLN-A is a Discord companion app designed to assist a survivor in their day to day ARK operations",
  "main": "src/client/index.js",
  "scripts": {
    "server": "pm2 start src/server/server.js --name \"hlna-api\"",
    "client": "pm2 start src/client/index.js --name \"HLN-A\" --watch",
    "build": "concurrently \"npm run server\" \"npm run client\"",
    "dev": "concurrently \"nodemon src/server/server.js\" \"nodemon src/client/index.js\"",
    "deployslash": "node src/deploy-commands.js",
    "deleteslash": "node src/delete-commands.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ALCHElVlY/hlna.git"
  },
  "author": {
    "name": "William Holt",
    "discord": "Alchemy#1990"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ALCHElVlY/hlna/issues"
  },
  "homepage": "https://github.com/ALCHElVlY/hlna#readme",
  "dependencies": {
    "@discordjs/builders": "^0.8.2",
    "@discordjs/rest": "^0.1.0-canary.0",
    "axios": "^0.24.0",
    "chalk": "^4.1.2",
    "discord.js": "^13.3.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "fs": "^0.0.1-security",
    "moment": "^2.29.1",
    "moment-duration-format": "^2.3.2",
    "mongoose": "^6.0.13"
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "nodemon": "^2.0.15"
  }
}
